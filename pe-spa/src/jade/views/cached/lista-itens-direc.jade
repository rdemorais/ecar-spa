.panel.panel-default
  .panel-heading
    | {{listaItens.total}}
    span(ng-if="listaItens.total > 1") itens encontrados
    span(ng-if="listaItens.total == 1") item encontrado
  // START table-responsive
  .table-responsive
    table.table.table-hover
      tbody
        tr(ng-repeat="item in listaItens.lista")
          td
            .media
              a.pull-left(href='', ng-click="itemSelecionado(item.id)")
                .media-object.img-responsive(ng-class="'img-status-'+item.nomeCor")
                .small.text-muted {{item.ciclo}}
              .media-body
                h5.media-heading 
                  a(href="", ng-click="itemSelecionado(item.id)").text-inverse {{item.desc}}
                .pull-right.text-muted 
                  strong Situação:
                  |&nbsp; {{item.situacao}}
                p.text-muted 
                  strong Responsável pelo parecer: 
                  |&nbsp;{{item.responsavel}} - {{item.orgaoResp}}

                .mr.label(ng-class="'label-'+item.oeShortName") {{item.oe}}
                .mr.label(ng-class="'label-'+item.nivel") {{item.nivel}}