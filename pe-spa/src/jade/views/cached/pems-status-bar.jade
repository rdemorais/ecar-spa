  .col-md-8(ng-if="hpanel[0]")
    .row.row-table
      .col-sm-12.col-xs-12
        .row.row-table
          .h5.pull-right.mr-xl Total: {{statusBar.meta.total}}
          .h4.animated.fadeInUp Metas
        .row.row-flush
          .col-xs-4(ng-repeat="st in statusBar.meta.status")
            .databox.radius-bordered
              .databox-left
                .databox-piechart
                  .easypie(easypiechart='', options='st.pieOptions', percent='st.percentual')
                    span {{st.percentual |format: 'perc-st'}}%
              .databox-right
                .databox-number {{st.count}}
                .databox-text {{st.desc}}
               
